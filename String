#include <iostream>
#include <string>
using namespace std;

int main() {
    string a, b;
    cin >> a >> b;

    // Print lengths
    cout << a.size() << " " << b.size() << endl;

    // Concatenate and print
    cout << a + b << endl;

    // Swap first characters
    char temp = a[0];
    a[0] = b[0];
    b[0] = temp;

    // Print swapped strings
    cout << a << " " << b << endl;

    return 0;
}
